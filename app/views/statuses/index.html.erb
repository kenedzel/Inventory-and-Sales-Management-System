<%= render "addStatus", status: @status %>
  <div align="center">
    <% if notice.present? %>
      <div class="alert alert-info alert-dismissable alert-size" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </div>
    <% end %>
  </div>
  <div class="title-padding">
    <h1>Statuses</h1>
    <p>Statuses Listing</p>
  </div>
  <div class="data-table">
    <div class="single-padding-btn">
      <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#myModal">Add status</button>
    </div>
    <table class=" table table-margin-left single-table">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @statuses.each do |status| %>
          <tr>
            <td><%= status.name %></td>
            <td><%= link_to 'Show', status %></td>
            <td><%= link_to 'Edit', edit_status_path(status) %></td>
            <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>

