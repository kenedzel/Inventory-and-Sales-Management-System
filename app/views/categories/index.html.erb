<%= render "addCategory", category: @category %>
  <div align="center">
    <% if notice.present? %>
      <div class="alert alert-info alert-dismissable alert-size" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </div>
    <% end %>
  </div>
  <div class="title-padding">
    <h1>Categories</h1>
    <p> Categories Listing</p>
  </div>
  <div class="data-table">
    <div class="single-padding-btn">
      <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#myModal">Add category</button>
    </div>
    <table class="table table-margin-left single-table">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= link_to 'Destroy', category, :class => "btn btn-danger btn-outline", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

  <br>

