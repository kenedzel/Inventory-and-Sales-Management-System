<%= render "addUnit", unit: @unit %>
  <div align="center">
    <% if notice.present? %>
      <div class="alert alert-info alert-dismissable alert-size" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </div>
    <% end %>
  </div>
  <div class="title-padding">
    <h1>Units</h1>
    <p>Units Listing</p>
  </div>
  <div class="data-table">
    <div class="single-padding-btn">
      <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#myModal">Add unit</button>
    </div>
  </div>
  <table class="table margin-left-unit single-table">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @units.each do |unit| %>
        <tr>
          <td><%= unit.name %></td>
          <td><%= link_to 'Show', unit %></td>
          <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
          <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h4 class="paginate-margin"><%= will_paginate %></h4>
  <!-- <%= link_to 'New Unit', new_unit_path %> -->
