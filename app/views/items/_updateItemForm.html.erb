<%= form_for(item) do |f| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="edit-form">
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, :class => "form-control" %>
    </div>

    <div class="field">
      <%= f.label :code %>
      <%= f.text_field :code, :class => "form-control" %>
    </div>

    <div class="field">
      <%= f.label :category_id %>
      <!-- <%=f.select(:category_id, options_from_collection_for_select(@categories,:id,:name), {} ,{class: "form-control"}) %> -->
      <%= f.select(:category_id, options_from_collection_for_select(@categories,:id,:name, f.object.category_id), {include_blank: '-- Select Category --'}, {:id=>"category_id", :class =>"form-control", :disabled=>false}) %>
    </div>

    <div class="field">
      <%= f.label :cost_price %>
      <%= f.number_field :cost_price, :class => "form-control" %>
    </div>

    <div class="field">
      <%= f.label :stock %>
      <%= f.number_field :stock, :class => "form-control" %>
    </div>

    <div class="field">
      <%= f.label :critical_quantity_basis %>
      <%= f.number_field :critical_quantity_basis, :class => "form-control" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Update Item", :class => "btn btn-success btn-outline to-left" %>
      <a class="btn btn-danger btn-outline back-btn" href="/">Back</a>
    </div>
  </div>
  <br><br>
<% end %>
